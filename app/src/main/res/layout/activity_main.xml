<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Status: Bluetooth Indisponível"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/onOffTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Status: Bluetooth Desligado"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/visibleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Status: Bluetooth não está visível"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar"/>

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desligar"/>

    <Button
        android:id="@+id/buttonVisivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deixar Visível"/>

    <Button
        android:id="@+id/buttonPaired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obter dispositivos pareados"/>

    <TextView
        android:id="@+id/listDispositivosPareados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Dispositivos pareados aqui"/>

</LinearLayout>